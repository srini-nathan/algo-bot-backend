{
    "compilerOptions": {
      "module": "NodeNext",
      "skipLibCheck": true,
      "strict": false,
      "incremental": true,
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": "src",
      "outDir": "dist",
      "noImplicitAny": true,
      "target": "es6",
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }